# Embeddings: Ollama only
OLLAMA_BASE_URL=http://localhost:11434

# Chat: OpenAI-compatible (can be OpenAI, Ollama OpenAI-compatible, vLLM, etc.)
# Examples:
# - OpenAI: https://api.openai.com
# - Ollama (OpenAI compat): http://localhost:11434
OPENAI_BASE_URL=https://api.openai.com
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Qdrant vector DB (optional but required if you want persistent vector search)
QDRANT_URL=
QDRANT_API_KEY=

# Optional: persist pipeline runs (history/details) to MySQL
# Either set MYSQL_URL, or set the individual fields below.
# Example:
# MYSQL_URL=mysql://root:password@127.0.0.1:3306/docspipeline
MYSQL_URL=
# MYSQL_HOST=127.0.0.1
# MYSQL_PORT=3306
# MYSQL_USER=root
# MYSQL_PASSWORD=password
# MYSQL_DATABASE=docspipeline

# Base URL used for building "reference" links in chat responses
PUBLIC_BASE_URL=http://localhost:3000

# Optional: point OCR stage to FastAPI backend (recommended if you want typhoon_ocr)
OCR_BACKEND_URL=http://127.0.0.1:8001

# FastAPI backend uses this key (can be the same Typhoon key)
OPENTYPHOON_API_KEY=

# Legacy / optional (only needed if you disable OCR_BACKEND_URL and use direct Typhoon OCR)
TYPHOON_API_KEY=
